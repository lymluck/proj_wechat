/**app.wxss**/

/*隐藏滚动条*/

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background-color: #f5f5f5;
}

.horizontal-line {
  height: 0.6rpx;
  width: 100%;
  background-color: #e4e5e6;
}

.vertical-line {
  height: 100%;
  width: 0.6rpx;
  background-color: #e4e5e6;
}

.load-more-font {
  height: 80rpx;
  width: 100%;
  font-size: 0.8rem;
  color: #949ba1;
  line-height: 80rpx;
}
