.topmenu {
  position: fixed;
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 80rpx;
  border-style: solid;
  border-width: 0.6rpx 0rpx 0.6rpx 0rpx;
  border-color: #e4e5e6;
  background-color: #fff;
}

.topmenuitem {
  flex-direction: row;
  text-align: center;
  align-self: center;
  width: 100%;
}

.topmenutext {
  color: #26343f;
  font-size: 0.9rem;
}

.topmenuarrow {
  width: 28rpx;
  height: 15rpx;
  margin-left: 10rpx;
  margin-bottom: 4rpx;
}

.schoolitem {
  background-color: #fff;
  padding: 24rpx;
  display: flex;
  flex-direction: row;
}

.schoolitemlogo {
  width: 110rpx;
  height: 110rpx;
  align-content: center;
  align-self: center;
  margin-right: 18rpx;
  border-style: solid;
  border-width: 8rpx;
  border-color: #e4e5e6;
  border-radius: 50%;
}

.logoimage {
  width: 96rpx;
  height: 96rpx;
  border-style: solid;
  border-width: 8rpx;
  border-color: #fff;
  border-radius: 50%;
}
